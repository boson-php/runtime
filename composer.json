{
    "name": "boson-php/runtime",
    "description": "Boson WebView runtime library",
    "type": "library",
    "license": "MIT",
    "homepage": "https://bosonphp.com",
    "support": {
        "issues": "https://github.com/boson-php/boson/issues",
        "source": "https://github.com/boson-php/runtime"
    },
    "authors": [
        {
            "name": "Kirill Nesmeyanov",
            "email": "nesk@xakep.ru"
        }
    ],
    "require": {
        "php": "^8.4",
        "ext-ffi": "*",
        "boson-php/cpu-info": "^1.0",
        "boson-php/globals-provider": "^1.0",
        "boson-php/http": "^1.0",
        "boson-php/http-body-decoder": "^1.0",
        "boson-php/http-static-provider": "^1.0",
        "boson-php/http-contracts": "^1.0",
        "boson-php/os-info": "^1.0",
        "boson-php/weak-types": "^1.0",
        "ffi/env": "^1.0",
        "psr/event-dispatcher": "^1.0",
        "react/promise": "^3.0"
    },
    "autoload": {
        "psr-4": {
            "Boson\\": "src"
        }
    },
    "require-dev": {
        "phpunit/phpunit": "^12.0"
    },
    "autoload-dev": {
        "psr-4": {
            "Boson\\Tests\\": "tests"
        }
    },
    "extra": {
        "branch-alias": {
            "dev-master": "1.0.x-dev",
            "dev-main": "1.0.x-dev"
        }
    },
    "config": {
        "sort-packages": true,
        "platform-check": true,
        "bin-compat": "full",
        "optimize-autoloader": true,
        "preferred-install": {
            "*": "dist"
        }
    },
    "minimum-stability": "dev",
    "prefer-stable": true
}
